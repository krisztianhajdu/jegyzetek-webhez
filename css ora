    background-color: darkcyan;
    min-width: 400px;
    margin: 0 auto;
    box-sizing: border-box;
    border-width: 15px;
    border-style: groove;
    border-color: darkred;
}
div.header-image {
    background-image: url('../pics/hatter.png');
    height: 200px;

}
